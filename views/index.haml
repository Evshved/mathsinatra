      Linear
      %input#quadratic{:name => "switch", :type => "radio", :value => "0"}/
      Quadratic
      #div_change_linear
        %span.letter kâˆ™x + b = y
        %br/
        %br/
        = succeed "x+" do
          %input#first_coeflin{:maxlength => "25", :name => "post[k]", :size => "10", :type => "text", :value => "6"}/
        %input#second_coeflin{:maxlength => "25", :name => "post[b]", :size => "10", :type => "text", :value => "2"}/
